<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oa.mapper.TaskMapper">

	<select id="findAllTask" resultType="Task">
		SELECT * FROM Task
	</select>
	<select id="findTaskById" parameterType="int" resultType="Task">
		SELECT * FROM Task WHERE TaskId = #{id}
	</select>
	<insert id="saveTask" parameterType="Task">
		insert into Task VALUES
		(#{taskId},#{taskInfo},#{taskName},#{employeeId},#{finishTime})
	</insert>
	<update id="updateTask" parameterType="Task">
		update Task set taskInfo=#{taskInfo},taskName=#{taskName},employeeId=#{employeeId},finishTime=#{finishTime}
		where TaskId=#{taskId}
	</update>
	<delete id="deleteTaskById" parameterType="int">
		DELETE FROM Task WHERE TaskId = #{id}
	</delete>

</mapper>