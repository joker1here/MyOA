<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oa.mapper.JobMapper">

	<select id="findAllJob" resultType="Job">
		SELECT * FROM Job
	</select>
	<select id="findJobById" parameterType="int" resultType="Job">
		SELECT * FROM Job WHERE JobId = #{id}
	</select>
	<insert id="saveJob" parameterType="Job">
		insert into Job VALUES
		(#{jobId},#{jobIntroduce},#{jobName})
	</insert>
	<update id="updateJob" parameterType="Job">
		update Job set JobIntroduce=#{jobIntroduce},JobName=#{jobName}
		where JobId=#{jobId}
	</update>
	<delete id="deleteJobById" parameterType="int">
		DELETE FROM Job WHERE JobId = #{id}
	</delete>

</mapper>