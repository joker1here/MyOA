<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oa.mapper.DeptMapper">

    <select id="findAllDept" resultType="dept">
		SELECT * FROM Dept
	</select>
	<select id="findDeptById" parameterType="int" resultType="dept">
		SELECT * FROM Dept WHERE deptId = #{id}
	</select>
    <insert id="saveDept" parameterType="dept">
		insert into Dept VALUES
		(#{deptId},#{deptIntroduce},#{deptName})
	</insert>
    <update id="updateDept" parameterType="dept">
		update Dept set deptIntroduce=#{deptIntroduce},deptName=#{deptName}
		where deptId=#{deptId}
	</update>
	<delete id="deleteDeptById" parameterType="int">
		DELETE FROM Dept WHERE deptId = #{id}
	</delete>

</mapper>